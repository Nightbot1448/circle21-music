<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/recoveryact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Account "
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/backrec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="230dp"
        android:text="BACK"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/recoveryact"
        app:layout_constraintTop_toTopOf="@+id/recoveryact" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="77dp"
        android:layout_height="26dp"
        android:layout_marginStart="80dp"
        android:text="sign in "
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/backrec"
        app:layout_constraintStart_toEndOf="@+id/recoveryact" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="77dp"
        android:layout_height="26dp"
        android:layout_marginStart="60dp"
        android:text="sign up"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/signin"
        app:layout_constraintStart_toEndOf="@+id/signin" />


</androidx.constraintlayout.widget.ConstraintLayout>