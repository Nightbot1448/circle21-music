<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/file"
        android:layout_width="199dp"
        android:layout_height="32dp"
        android:layout_marginStart="321dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="250dp"
        android:text="Adding files"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/official"
        android:layout_width="112dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:text="Official library"
        android:contentDescription="Official library"
        app:layout_constraintEnd_toEndOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/from" />

    <Button
        android:id="@+id/my"
        android:layout_width="126dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:text="My library"
        android:contentDescription="My library"
        app:layout_constraintStart_toEndOf="@+id/official"
        app:layout_constraintTop_toTopOf="@+id/official" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="150dp"
        android:text="FROM"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/file"
        app:layout_constraintTop_toBottomOf="@+id/file" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="TO"
        android:textColor="@color/colorAccent"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/file"
        app:layout_constraintTop_toBottomOf="@+id/file" />

    <TextView
        android:id="@+id/back_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="250dp"
        android:text="BACK"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/file"
        app:layout_constraintEnd_toStartOf="@+id/file"
        app:layout_constraintTop_toTopOf="@+id/file" />

</androidx.constraintlayout.widget.ConstraintLayout>