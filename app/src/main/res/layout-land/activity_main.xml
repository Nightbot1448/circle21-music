<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Это временно!!!-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/scroll"
        android:layout_width="452dp"
        android:layout_height="194dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/instruments"
        app:layout_constraintTop_toBottomOf="@+id/progressBarM">

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/KICK"
        text1
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="15dp"
        android:onClick="playSound"
        android:text="KICK"
        app:layout_constraintEnd_toStartOf="@+id/TYPE1"
        app:layout_constraintStart_toStartOf="@+id/file"
        app:layout_constraintTop_toBottomOf="@+id/file" />

    <Button
        android:id="@+id/TYPE1"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:text="TYPE 1"
        app:layout_constraintBottom_toBottomOf="@+id/KICK"
        app:layout_constraintStart_toEndOf="@+id/KICK"
        app:layout_constraintTop_toTopOf="@+id/KICK" />

    <Button
        android:id="@+id/SNARE"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:onClick="playSound1"
        android:text="SNARE"
        app:layout_constraintStart_toStartOf="@+id/KICK"
        app:layout_constraintTop_toBottomOf="@+id/KICK" />

    <Button
        android:id="@+id/TYPE4"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:text="TYPE 4"
        app:layout_constraintEnd_toEndOf="@+id/TYPE1"
        app:layout_constraintStart_toStartOf="@+id/TYPE1"
        app:layout_constraintTop_toBottomOf="@+id/TYPE1" />

    <Button
        android:id="@+id/HIHAT"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="HIHAT"
        app:layout_constraintStart_toStartOf="@+id/SNARE"
        app:layout_constraintTop_toBottomOf="@+id/SNARE" />

    <Button
        android:id="@+id/TYPE7"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginBottom="9dp"
        android:text="TYPE 7"
        app:layout_constraintBottom_toTopOf="@+id/ADD2"
        app:layout_constraintEnd_toEndOf="@+id/TYPE4"
        app:layout_constraintTop_toBottomOf="@+id/TYPE4" />

    <Button
        android:id="@+id/ADD1"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:text="ADD +"
        app:layout_constraintStart_toStartOf="@+id/HIHAT"
        app:layout_constraintTop_toBottomOf="@+id/HIHAT" />

    <Button
        android:id="@+id/ADD2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:text="ADD +"
        app:layout_constraintEnd_toEndOf="@+id/TYPE7"
        app:layout_constraintStart_toEndOf="@+id/ADD1"
        app:layout_constraintTop_toBottomOf="@+id/TYPE7" />

    <TextView
        android:id="@+id/instruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Instruments"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/file"
        app:layout_constraintStart_toEndOf="@+id/file"
        app:layout_constraintTop_toTopOf="@+id/file" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Settings"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/instruments"
        app:layout_constraintStart_toEndOf="@+id/instruments"
        app:layout_constraintTop_toTopOf="@+id/instruments" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="69dp"
        android:layout_height="29dp"
        android:layout_marginStart="50dp"
        android:text="Tutorial"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/settings"
        app:layout_constraintStart_toEndOf="@+id/settings"
        app:layout_constraintTop_toTopOf="@+id/settings" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:layout_marginStart="50dp"
        android:text="Help"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/next"
        android:contentDescription="Enter How Much Cookies You Want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/play"
        app:layout_constraintTop_toTopOf="@+id/play"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Enter How Much Cookies You Want"
        android:clickable="true"
        app:layout_constraintEnd_toStartOf="@+id/play"
        app:layout_constraintTop_toTopOf="@+id/play"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <!-- TODO: Артем, добавь, пожалуйста, на ВСЕ кнопки такой onClick (и замени id) на совпадающий с текстом кнопки или соответствующий ее предназначению -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:clickable="true"
        android:contentDescription="Enter How Much Cookies You Want"
        android:onClick="playSound"
        app:layout_constraintStart_toEndOf="@+id/stop"
        app:layout_constraintTop_toTopOf="@+id/stop"
        app:srcCompat="@android:drawable/ic_media_play" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:clickable="true"
        android:contentDescription="Enter How Much Cookies You Want"
        app:layout_constraintEnd_toStartOf="@+id/stop"
        app:layout_constraintTop_toTopOf="@+id/stop"
        app:srcCompat="@android:drawable/radiobutton_on_background" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:contentDescription="Enter How Much Cookies You Want"
        app:layout_constraintEnd_toEndOf="@+id/ADD2"
        app:layout_constraintTop_toBottomOf="@+id/ADD2"
        app:srcCompat="@android:drawable/alert_dark_frame" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="8dp"
        android:text="00:09:13"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/record"
        app:layout_constraintEnd_toStartOf="@+id/record"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/track1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:text="Track 1"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/KICK"
        app:layout_constraintEnd_toStartOf="@+id/KICK"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/KICK"
        app:layout_constraintVertical_bias="0.421" />

    <TextView
        android:id="@+id/track2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:text="Track 2"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/KICK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track1" />

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        android:text="Add +"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/KICK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/track2" />

    <ProgressBar
        android:id="@+id/progressBarM"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="426dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@+id/TYPE1"
        app:layout_constraintTop_toBottomOf="@+id/file" />
</androidx.constraintlayout.widget.ConstraintLayout>